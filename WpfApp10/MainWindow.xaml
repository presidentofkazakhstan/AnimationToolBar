<Window x:Class="WpfApp10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="grid">
        <Canvas x:Name="canvas" Background="LightGray" Height="30" Width="400">
            <Rectangle x:Name="rectangle" Height="{Binding ElementName=canvas, Path=Height}" Width="20" Fill="Green"></Rectangle>
        </Canvas>
        <Button Name="button" Click="button_Click" Content="Загрузить" HorizontalAlignment="Left" Margin="352,143,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
